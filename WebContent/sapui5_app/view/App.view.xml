<core:View xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="sapui5_app.controller.App"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Title">
		<content>
			<Text text="Hola mundo "></Text>
			<Input 
				value="{/recipient/name}"
				description="Hello {/recipient/name}" 
				valueLiveUpdate="true"
				width="60%" />
			<Button text="This is an alert" press=".onShowHello" />
			<Button text="This is a toast" press=".onShowHelloToast" />
			<Button text="{i18n>showHelloButtonText}" press=".onShowHelloTraducido" />
		</content>
	</Page>
</core:View>