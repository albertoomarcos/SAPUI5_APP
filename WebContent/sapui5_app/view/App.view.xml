<mvc:View
	controllerName="sapui5_app.controller.App" 
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc" 
	displayBlock="true">
	<App>
		<pages>
			<Page title="{i18n>homePageTitle}">
				<content>
					<Panel headerText="{i18n>helloPanelTitle}">
						<content>
							<Text text="Hola mundo "></Text>
							<Input value="{/recipient/name}"
								description="Hello {/recipient/name}" valueLiveUpdate="true"
								width="50%" />
							<Button text="This is an alert" press=".onShowHello" />
							<Button text="This is a toast" press=".onShowHelloToast" />
							<Button text="{i18n>showHelloButtonText}"
								press=".onShowHelloTraducido" />
						</content>
					</Panel>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>